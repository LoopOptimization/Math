// Expression template XOR assignment function for BitSet
template <BitCollection T, typename Expr>
TRIVIAL constexpr void xorAssignFromExpression(BitSet<T> &bitset,
                                               const Expr &expr)
  requires requires {
    { expr[std::ptrdiff_t{}] } -> std::convertible_to<bool>;
